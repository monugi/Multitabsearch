{
  "manifest_version": 3,
  "name": "Multi Tab Search Extension",
  "version": "1.0.0",
  "description": "Search multiple queries at once by opening multiple tabs with customizable filters",
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Multi Tab Search"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}